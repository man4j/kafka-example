//Add Git Hook:
//1. Open https://github.com/man4j/kafka-example/settings/hooks
//2. Add hook url to push: http://159.65.118.202:4444/git/notifyCommit?url=https://github.com/man4j/kafka-example.git

pipeline {
  agent {
    docker {
      image 'maven'
      args '-v /var/run/docker.sock:/var/run/docker.sock -v ${PWD}/.m2:/root/.m2 --network clustercontrol-net'
    }    
  }
  
  environment {
    SETTINGS_XML = credentials('settings.xml')
  }

  stages {
    stage('Clean') {
      steps {
        sh 'echo "tag comment:${TAG_NAME}"'
        sh 'mvn -f invoice-sender/pom.xml clean:clean'
      }
    }
    stage('Resources') {
      steps {
        sh 'mvn -f invoice-sender/pom.xml resources:resources resources:testResources'
      }
    }
    stage('Compile') {
      steps {
        sh 'mvn -f invoice-sender/pom.xml compiler:compile compiler:testCompile'
      }
    }
    stage('Package') {
      steps {
        sh 'mvn -f invoice-sender/pom.xml jar:jar shade:shade'
      }
    }
    stage('Image') {
      steps {
        sh 'mvn -f invoice-sender/pom.xml -s $SETTINGS_XML pl.project13.maven:git-commit-id-plugin:2.2.4:revision docker:build -DpushImage'
      }
    }
  }   
}
